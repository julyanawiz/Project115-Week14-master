<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".NewActivity3"
    >

    <LinearLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:background="@color/colorPrimary"
        tools:context="com.ariz.ador.project115v2.MainActivity">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="140dp"
            android:src="@drawable/sblogo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/hot"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:adjustViewBounds="false"
            android:cropToPadding="false"
            android:layout_marginTop="50dp"
            app:srcCompat="@drawable/hot" />

        <CheckBox
            android:id="@+id/espresso"
            android:layout_width="182dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:checked="false"
            android:fontFamily="serif"
            android:padding="20dp"
            android:text="Espresso"
            android:textColor="#f000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/mochiatto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:checked="false"
            android:fontFamily="serif"
            android:padding="20dp"
            android:text="Machiatto"
            android:textColor="#f000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/latte"
            android:layout_width="182dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:checked="false"
            android:fontFamily="serif"
            android:padding="20dp"
            android:text="Latte"
            android:textColor="#f000"
            android:textSize="20sp"
            android:textStyle="bold" />


        <EditText
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et_name"
            android:inputType="textCapWords"
            android:hint="@string/name"
            />

        <EditText
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et_add"
            android:inputType="textCapWords"
            android:hint="@string/add"
            />

        <EditText
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et_cont"
            android:inputType="textCapWords"
            android:hint="@string/cont"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <Button
                android:layout_width="48dp"
                android:onClick="decrement"
                android:layout_height="48dp"

                android:text=" - "
                tools:ignore="OnClick" />

            <TextView
                android:layout_width="match_parent"
                android:layout_gravity="bottom"
                android:layout_height="wrap_content"
                android:textSize="25sp"

                android:layout_marginLeft="10sp"
                android:textColor="#000000"
                android:id="@+id/txt_quantity"
                android:layout_marginTop="16dp"
                android:text="0"

                />


            <Button
                android:layout_width="48dp"
                android:onClick="increment"
                android:layout_marginLeft="10sp"

                android:layout_height="48dp"
                android:text="+"
                tools:ignore="OnClick" />

        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginTop="12dp"
            android:textAllCaps="true"
            android:text="Order Summary : "
            android:fontFamily="serif"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:fontFamily="serif"
            android:textColor="#000000"

            android:id="@+id/txt_price"
            android:layout_marginTop="12dp"
            android:text="$0" />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:background="@color/colorAccent"
            android:fontFamily="serif"
            android:onClick="submitOrder"
            android:text=" Show Order "
            tools:ignore="OnClick"
            tools:textSize="15sp" />

    </LinearLayout>
</ScrollView>